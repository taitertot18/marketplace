            <input type="email" placeholder="Email" id="txtEmail" name="email"  style="width: 80%;" value="<%= myusers[0].email %>">
            <br>
            <label for="txtNewPassword" style="font-size: 0.9em;">Password:</label>
            <input type="password" placeholder="Password" id="txtNewPassword" name="password" class="password-input" style="width: 100%; padding-right: 30px;"  value="<%= myusers[0].password %>">
            <br><br>
            <button class="button-75"  type ="submit" role="button"  ><span class="text">Update</span></button>
